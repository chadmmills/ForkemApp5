<div class="content main">
  <h1 class="px2">Mealbooks</h1>
  <div class="flex flex-wrap">
    <div class="p2">
      <%= form_for Mealbook.new do |f| %>
        <div class="card-m bg-white flex flex-column justify-between">
          <h3>New Mealbook</h3>
          <div class="fields">
            <div>
              <%= f.text_field :name, class: "input inline", placeholder: "Mealbook Name" %>
            </div>
            <div>
              <%= f.submit "Create Mealbook" %>
            </div>
          </div>
        </div>
        <% end %>
    </div>
    <%= render partial: "mealbook_list_item", collection: mealbooks, as: :mealbook %>
  </div>
</div>
